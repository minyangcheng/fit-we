<resources>

    <style name="FitAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FitAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--导航栏图片按钮-->
    <style name="FrmNbBarImageBg">
        <item name="android:layout_width">@dimen/frm_nb_ico_width</item>
        <item name="android:layout_height">@dimen/frm_nb_ico_width</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
    </style>

    <!--导航栏文字按钮-->
    <style name="FrmNbBarTextBg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/frm_nb_ico_width</item>
        <item name="android:minWidth">@dimen/frm_nb_ico_width</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/frm_nb_ico_size</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Line_Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="HudStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
